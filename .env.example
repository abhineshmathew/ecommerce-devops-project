# ----------------------------
# General
# ----------------------------
APP_ENV=development
APP_DEBUG=true
APP_PORT=5000

# ----------------------------
# Database
# ----------------------------
DB_HOST=postgres
DB_PORT=5432
DB_USER=app_user
DB_PASSWORD=secret_password
DB_NAME=ecommerce_db

# ----------------------------
# Cache (Redis)
# ----------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ----------------------------
# Message Broker (Kafka / RabbitMQ)
# ----------------------------
BROKER_URL=kafka:9092
# For RabbitMQ example:
# BROKER_URL=amqp://guest:guest@rabbitmq:5672/

# ----------------------------
# Auth / Security
# ----------------------------
JWT_SECRET=your_jwt_secret
JWT_ALGORITHM=HS256
JWT_EXPIRY=3600

# ----------------------------
# Monitoring / Logging
# ----------------------------
LOG_LEVEL=INFO
